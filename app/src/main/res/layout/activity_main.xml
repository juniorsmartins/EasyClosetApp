<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_cadastrarUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Cadastrar Usuário"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/button_listarUsuarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Listar Usuários"
        app:layout_constraintEnd_toEndOf="@+id/button_cadastrarUsuario"
        app:layout_constraintStart_toStartOf="@+id/button_cadastrarUsuario"
        app:layout_constraintTop_toBottomOf="@+id/button_cadastrarUsuario" />

    <Button
        android:id="@+id/button_listarRoupas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Listar Roupas"
        app:layout_constraintEnd_toEndOf="@+id/button_listarUsuarios"
        app:layout_constraintStart_toStartOf="@+id/button_listarUsuarios"
        app:layout_constraintTop_toBottomOf="@+id/button_listarUsuarios" />

    <Button
        android:id="@+id/button_infosApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Informações"
        app:layout_constraintEnd_toEndOf="@+id/button_listarRoupas"
        app:layout_constraintStart_toStartOf="@+id/button_listarRoupas"
        app:layout_constraintTop_toBottomOf="@+id/button_listarRoupas" />


</androidx.constraintlayout.widget.ConstraintLayout>